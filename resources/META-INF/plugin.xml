<idea-plugin>
  <id>funit</id>
  <name>funit</name>
  <version>1.0</version>
  <vendor email="zhouhuajian@company.com" url="http://www.zhouhuajian.com">HuaJian Company</vendor>

  <description><![CDATA[
      这个插件可以翻译选中的单词，还可以加其他HTML标签，需要最少40个字符<br>
      作者：zhouhuajian
    ]]></description>

  <change-notes><![CDATA[
      第一版：实现可以翻译选中的单词
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="funit" class="funit.action.TranslateAction" text="翻译" description="可以翻译选中的单词。">
      <add-to-group group-id="EditorPopupMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>